{
  "name": "@epicurrents/interface",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "vue-tsc && vite build --config vite.config.lib.ts",
    "build:app": "vue-tsc && vite build --config vite.config.app.ts",
    "build:custom": "vue-tsc && vite build --config vite.config.custom.ts",
    "copy:umd": "cp node_modules/@epicurrents/core/umd/* public/epicurrents/ && cp node_modules/@epicurrents/edf-reader/umd/* public/edf-reader/ && cp node_modules/@epicurrents/pyodide-service/umd/* public/pyodide-service/",
    "copy:workers": "node scripts/workers.mjs",
    "deps:build": "node scripts/build.mjs",
    "deps:clean": "node scripts/clean.mjs",
    "deps:init": "node scripts/init.mjs",
    "deps:install": "node scripts/install.mjs",
    "deps:prepare": "npm run deps:update && npm run deps:install && npm run deps:clean && npm run deps:build",
    "deps:update": "node scripts/update.mjs",
    "dev": "vite --force",
    "lint": "npm run lint:src",
    "lint:src": "eslint src",
    "prepack": "npm run build",
    "preview": "vite preview",
    "setup": "node scripts/setup.mjs",
    "start": "npm run copy:workers && vite --force",
    "test": "npm run test:unit",
    "test:unit": "jest --coverage --verbose --runInBand"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": "./dist/types/index.d.ts",
    "./package.json": "./package.json",
    "./dist/types": "./dist/types/index.d.ts"
  },
  "imports": {
    "#*": "./dist/*"
  },
  "files": [
    "dist/*",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/epicurrents/interface.git"
  },
  "author": "Sampsa Lohi",
  "license": "Apache-2.0",
  "dependencies": {
    "@awesome.me/webawesome": "^3.0.0",
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-regular-svg-icons": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.5",
    "dompurify": "^3.2.3",
    "lodash": "^4.17.23",
    "scoped-event-bus": "^0.2.4",
    "scoped-event-log": "^3.0.0",
    "stream-browserify": "^3.0.0",
    "vite-plugin-singlefile": "^2.0.1",
    "vue": "^3.5.13",
    "vue-i18n": "^11.2.8",
    "vuex": "^4.1.0",
    "webpack-dev-server": "5.2.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.23",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vue/vue3-jest": "^29.2.6",
    "dotenv": "^17.3.1",
    "isomorphic-fetch": "^3.0.0",
    "jest": "^29.7.0",
    "jest-serializer-vue": "^3.1.0",
    "tsconfig-replace-paths": "^0.0.14",
    "typescript": "5.7",
    "vite": "^7.3.1",
    "vite-plugin-cross-origin-isolation": "^0.1.6",
    "vite-plugin-pwa": "^1.2.0",
    "vite-tsconfig-paths": "^4.2.3",
    "vue-tsc": "^2.2.0"
  }
}
